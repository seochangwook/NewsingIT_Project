<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/news_section_background">


    <cn.iwgang.familiarrecyclerview.FamiliarRefreshRecyclerView
        android:id="@+id/main_rv_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        app:frv_dividerHeight="0.5dp"
        app:frv_layoutManager="linear"
        app:frv_layoutManagerOrientation="vertical" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/scroll_topup_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/btn_floating_margin_left"
        android:layout_marginTop="@dimen/btn_floating_margin_top"
        android:background="@color/button_transparent_background"
        android:src="@mipmap/btn_toparrow"
        app:borderWidth="0dp"
        app:elevation="6dp"
        app:fabSize="mini" />
</FrameLayout>