<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/img_alarm_profile"
        android:src="@drawable/ic_face_black_24dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/text_alarm_name"
        android:layout_alignTop="@+id/img_alarm_profile"
        android:layout_toRightOf="@+id/img_alarm_profile"
        android:layout_toEndOf="@+id/img_alarm_profile"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/text_alarm_content"
        android:layout_alignTop="@+id/text_alarm_name"
        android:layout_toRightOf="@+id/text_alarm_name"
        android:layout_toEndOf="@+id/text_alarm_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/text_alarm_date"
        android:layout_below="@+id/text_alarm_name"
        android:layout_toRightOf="@+id/img_alarm_profile"
        android:layout_toEndOf="@+id/img_alarm_profile"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp" />

</RelativeLayout>