    <!--android:layout_marginTop="10dp" />-->

    <ImageButton
        android:id="@+id/btn_follower"
        android:layout_width="@dimen/follower_btn_width"
        android:layout_height="@dimen/follower_btn_height"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/follower_btn_margin_right"
        android:layout_marginTop="@dimen/follower_btn_margin_top"
        android:background="@android:color/transparent"
        android:src="@mipmap/btn_following" />


</RelativeLayout>