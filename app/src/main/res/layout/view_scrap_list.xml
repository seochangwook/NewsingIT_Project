<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card:cardBackgroundColor="#FFFFFF"
    card:cardCornerRadius="8dp"
    card:cardElevation="4dp">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_scrap_list"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@android:drawable/sym_def_app_icon" />

    <TextView
        android:id="@+id/text_scrap_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/img_scrap_list"
        android:layout_toRightOf="@+id/img_scrap_list"
        android:text="title"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageButton
        android:id="@+id/img_btn_scrap_setting"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:singleLine="true"

        android:src="@mipmap/ic_more" />

    <TextView
        android:id="@+id/text_scrap_list_nctitle"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/text_scrap_list_date"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/img_scrap_list"
        android:layout_toRightOf="@+id/img_scrap_list"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="nctitle"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/text_scrap_list_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/img_btn_scrap_list_like"
        android:layout_marginTop="10dp"
        android:text="ncTime"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/text_scrap_list_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text_scrap_list_date"
        android:layout_alignParentTop="true"
        android:layout_marginRight="40dp"
        android:layout_toLeftOf="@+id/text_scrap_list_date"
        android:layout_toStartOf="@+id/text_scrap_list_date"
        android:paddingRight="10dp"
        android:text="like"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageButton
        android:id="@+id/img_btn_scrap_list_like"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/text_scrap_list_title"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/text_scrap_list_like"
        android:layout_toStartOf="@+id/text_scrap_list_like"
        android:background="@color/button_transparent_background"
        android:src="@android:drawable/btn_star_big_off" />

</RelativeLayout>
</android.support.v7.widget.CardView>