<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card:cardBackgroundColor="#FFFFFF"
    card:cardCornerRadius="8dp"
    card:cardElevation="4dp">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/img_scrap_list"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@android:drawable/sym_def_app_icon" />

    <TextView
        android:id="@+id/text_scrap_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/img_scrap_list"
        android:layout_toEndOf="@+id/img_scrap_list" />

    <ImageButton
        android:id="@+id/img_btn_scrap_setting"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:singleLine="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@mipmap/sample_drawable_image" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="content"
        android:id="@+id/text_scrap_list_content"
        android:layout_below="@+id/img_btn_scrap_setting"
        android:layout_toRightOf="@+id/img_scrap_list"
        android:layout_toEndOf="@+id/img_scrap_list"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="date"
        android:id="@+id/text_scrap_list_date"
        android:layout_below="@+id/text_scrap_list_title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="like"
        android:id="@+id/text_scrap_list_like"
        android:paddingRight="10dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/img_btn_scrap_setting"
        android:layout_toStartOf="@+id/img_btn_scrap_setting" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/img_btn_scrap_list_like"
        android:src="@drawable/tw__heart_animation_detail_60fps_00059"
        android:background="@color/button_transparent_background"
        android:layout_marginRight="23dp"
        android:layout_marginEnd="23dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/text_scrap_list_like"
        android:layout_toStartOf="@+id/text_scrap_list_like" />

</RelativeLayout>
</android.support.v7.widget.CardView>