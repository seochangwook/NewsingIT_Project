<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/news_content_background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/news_5_thumbnail_imageview"
        android:layout_width="@dimen/news_content_img_width"
        android:layout_height="@dimen/news_content_img_height"
        android:layout_marginBottom="@dimen/news_content_img_margin_bottom"
        android:layout_marginLeft="@dimen/news_content_img_margin_left"
        android:layout_marginRight="@dimen/news_content_img_margin_right"
        android:background="@color/news_content_img_margin"
        android:src="@mipmap/ic_image_default" />

    <TextView
        android:id="@+id/news_5_author_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/news_content_author_margin_right"
        android:layout_marginTop="@dimen/news_content_author_margin_top"
        android:layout_toRightOf="@+id/news_5_thumbnail_imageview"
        android:text="한국경제"
        android:textColor="@color/news_content_author"
        android:textSize="@dimen/news_content_author_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/news_5_write_time_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/news_5_author_textview"
        android:layout_toRightOf="@+id/news_5_author_textview"
        android:text="2016.08.11"
        android:textColor="@color/news_content_time"
        android:textSize="@dimen/news_content_time_size" />

    <TextView
        android:id="@+id/news_5_title_textview"
        android:layout_width="@dimen/news_content_title_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/news_5_author_textview"
        android:layout_marginTop="@dimen/news_content_title_margin_top"
        android:layout_toRightOf="@+id/news_5_thumbnail_imageview"
        android:singleLine="true"
        android:text="SKT, 인텔과 폰 없이 통화하는 시대 연다."
        android:textColor="@color/news_content_title"
        android:textSize="@dimen/news_content_title_size" />

    <TextView
        android:id="@+id/news_5_content_textview"
        android:layout_width="@dimen/news_content_content_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/news_5_title_textview"
        android:layout_marginTop="@dimen/news_content_content_margin_top"
        android:layout_toRightOf="@+id/news_5_thumbnail_imageview"
        android:singleLine="true"
        android:text="16일(현지시각)미국 샌프란시스코 '인텐개발자' 더미 데이터 넣기 "
        android:textColor="@color/news_content_content"
        android:textSize="@dimen/news_content_content_size" />
</RelativeLayout>