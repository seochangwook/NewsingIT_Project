<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/popup_btn_height">

    <TextView
        android:id="@+id/group_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/popup_text_margin_left"
        android:text="*"
        android:textColor="@color/popup_text_color"
        android:textSize="@dimen/popup_text_size" />

    <ImageView
        android:id="@+id/image_indicate_arrow"
        android:layout_width="@dimen/indicator_width"
        android:layout_height="@dimen/indicator_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/popup_text_margin_right"
        android:src="@mipmap/ic_arrow_dropdown" />

    <TextView
        android:id="@+id/popup_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_dimen"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/line" />

</RelativeLayout>