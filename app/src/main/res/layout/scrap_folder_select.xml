<?xml version="1.0" encoding="utf-8"?><!--카드뷰로 감싸기(Metrial Design적용) -->
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card:cardBackgroundColor="#FFFFFF"
    card:cardCornerRadius="8dp"
    card:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="폴더선택"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/scrap_folder_rv_list_empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EEAADD"
            android:gravity="center"
            android:text="생성된 폴더가 없습니다. 폴더 만들기 버튼을 눌러 폴더를 생성해주세요!!"
            android:visibility="gone" />

        <cn.iwgang.familiarrecyclerview.FamiliarRefreshRecyclerView
            android:id="@+id/scrap_folder_rv_list"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scrollbars="vertical"
            app:frv_dividerHeight="0.5dp"
            app:frv_emptyView="@id/scrap_folder_rv_list_empty"
            app:frv_isEmptyViewKeepShowHeadOrFooter="true"
            app:frv_layoutManager="linear"
            app:frv_layoutManagerOrientation="vertical" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_input_add" />

            <Button
                android:id="@+id/create_scrap_folder_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/button_transparent_background"
                android:paddingRight="200dp"
                android:text="폴더 만들기" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>