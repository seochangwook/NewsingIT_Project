<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.apple.newsingit_project.UserSelectScrapContentActivity"
    tools:showIn="@layout/user_select_scrap_content_activity_layout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
        android:id="@+id/text_scrap_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="스크랩 제목"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/text_scrap_nccontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/img_scrap_nc"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="ncContent"
        android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/line_draw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_scrap_nccontent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/line_draw" />

        <ImageView
            android:id="@+id/img_scrap_nc"
        android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_alignLeft="@+id/text_scrap_nccontent"
            android:layout_alignStart="@+id/text_scrap_nccontent"
        android:layout_below="@+id/text_scrap_press"
        android:layout_marginTop="10dp"
            android:src="@mipmap/ic_launcher" />


        <me.gujun.android.taggroup.TagGroup
            android:id="@+id/tag_group_scrap_beauty"
            style="@style/TagGroup.Beauty_Red"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/draw_line_3"
            android:layout_marginLeft="5dp"
            app:atg_inputHint="태그를 등록해주세요" />

    <TextView
        android:id="@+id/text_scrap_my_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text_scrap_nccontent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:text="content"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/text_scrap_press"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text_scrap_title"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:text="author"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/text_scrap_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_scrap_title"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@+id/text_scrap_press"
        android:layout_toRightOf="@+id/text_scrap_press"
        android:text="date"
        android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/draw_line_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_scrap_my_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/line_draw" />

        <ImageView
            android:id="@+id/img_scrap_user_content"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignLeft="@+id/text_scrap_my_content"
            android:layout_alignStart="@+id/text_scrap_my_content"
            android:layout_below="@+id/draw_line_2"
            android:src="@mipmap/logo_image" />

        <TextView
            android:id="@+id/draw_line_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_scrap_user_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/line_draw" />

        <TextView
            android:id="@+id/text_scrap_nctitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/text_scrap_title"
            android:layout_alignStart="@+id/text_scrap_title"
            android:layout_below="@+id/text_scrap_title"
            android:text="뉴스 제목"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/text_scrap_like_cnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/img_scrap_nc"
            android:layout_alignRight="@+id/img_scrap_nc"
            android:layout_below="@+id/text_scrap_title"
            android:layout_marginRight="30dp"
            android:text="좋아요"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </RelativeLayout>
</ScrollView>
