<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.apple.newsingit_project.dialog.ScrapContentEditDialog">

    <ExpandableListView
        android:id="@+id/folder_expa_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/popup_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_dimen"
        android:layout_below="@+id/folder_expa_list"
        android:background="@mipmap/line" />

    <Button
        android:id="@+id/delete_scrap_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/popup_btn_height"
        android:layout_below="@+id/popup_line"
        android:background="@color/button_transparent_background"
        android:gravity="center|left"
        android:paddingLeft="@dimen/popup_text_margin_left"
        android:text="삭제"
        android:textColor="@color/popup_text_color"
        android:textSize="@dimen/popup_text_size" />

    <TextView
        android:id="@+id/popup_line_two"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_dimen"
        android:layout_below="@+id/delete_scrap_content"
        android:background="@mipmap/line" />

    <TextView
        android:id="@+id/info_text_private"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/popup_btn_height"
        android:layout_below="@+id/popup_line_two"
        android:layout_marginLeft="@dimen/popup_text_margin_left"
        android:gravity="center|left"
        android:text="비공개 설정"
        android:textColor="@color/popup_text_color"
        android:textSize="@dimen/popup_text_size" />

    <com.kyleduo.switchbutton.SwitchButton
        android:id="@+id/switch_private_scrap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/popup_line_two"
        android:layout_marginRight="@dimen/popup_text_margin_right"
        android:layout_marginTop="@dimen/popup_text_margin_top"
        app:kswFadeBack="true" />


</RelativeLayout>
