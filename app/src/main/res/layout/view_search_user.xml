<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/search_user_height"
    android:background="@color/search_user_background">

    <ImageView
        android:id="@+id/img_search_user"
        android:layout_width="@dimen/search_user_img_width"
        android:layout_height="@dimen/search_user_img_height"
        android:layout_marginLeft="@dimen/search_user_img_margin_left"
        android:layout_marginRight="@dimen/search_user_img_margin_right"
        android:layout_marginTop="@dimen/search_user_img_margin_top"
        android:src="@mipmap/ic_alarmlist_prof" />

    <TextView
        android:id="@+id/text_search_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/search_user_id_margin_top"
        android:layout_toRightOf="@+id/img_search_user"
        android:text="유저 이름"
        android:textColor="@color/search_user_id"
        android:textSize="@dimen/search_user_id_size" />


    <TextView
        android:id="@+id/text_search_user_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_search_user_name"
        android:layout_marginTop="@dimen/search_user_about_me_margin_top"
        android:layout_toRightOf="@+id/img_search_user"
        android:text="자기소개"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/search_user_about_me"
        android:textSize="@dimen/search_user_about_me_size" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_dimen"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/line" />
</RelativeLayout>
