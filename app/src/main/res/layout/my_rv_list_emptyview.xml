<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/empty_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/empty_img_height"
        android:layout_marginTop="@dimen/empty_img_margin_top"
        android:gravity="center"
        android:src="@mipmap/ic_folder_plus" />

    <TextView
        android:id="@+id/empty_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/empty_img"
        android:layout_marginTop="@dimen/empty_msg_margin_top"
        android:gravity="center"
        android:text="폴더를 만들어보세요."
        android:textColor="@color/my_info_folder_empty_msg"
        android:textSize="@dimen/empty_msg_size"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/empty_msg"
        android:layout_marginTop="@dimen/empty_msg_margin_top"
        android:gravity="center"
        android:text="네트워크 연결을 다시 확인해주세요"
        android:textColor="@color/red_color"
        android:textSize="@dimen/empty_msg_size"
        android:textStyle="bold" />
</RelativeLayout>