<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/empty_height_b"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/empty_img_keyword"
        android:layout_width="@dimen/empty_img_width_b"
        android:layout_height="@dimen/empty_img_height_b"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/empty_img_margin_left_b"
        android:layout_marginRight="@dimen/empty_img_margin_right_b"
        android:src="@mipmap/ic_folder_x" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/empty_img_keyword"
        android:layout_toRightOf="@+id/empty_img_keyword"
        android:text="키워드 정보를 불러올 수 없습니다"
        android:textColor="@color/my_info_folder_empty_msg"
        android:textSize="@dimen/empty_msg_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/empty_img_keyword"
        android:layout_marginRight="@dimen/empty_img_margin_right_b"
        android:layout_toRightOf="@+id/empty_img_keyword"
        android:text="네트워크 연결을 다시 확인해주세요"
        android:textColor="@color/red_color"
        android:textSize="@dimen/empty_msg_size"
        android:textStyle="bold" />

</RelativeLayout>